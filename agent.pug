html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title Sales Agent Page - Happy Hoe Grocery Ltd.
    link(rel='stylesheet' href='/css/sales.css')
    link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css')
  body
   .video-container(style='height: 600px;')
      video(autoplay muted loop)
        source(src='/images/202407310754 (1).mp4' type='video/mp4')
    header
      img(style='width: 40px; height: 40px; border-radius: 50%;' src='/images/download (3).png')
      .agent-profile
        span.agent-name Welcome, Sales Agent
        a(href='/') Logout
    aside.sidebar
      nav
        ul
          li
            a#showSalesFormBtn(href='/agentdashboard')
              i.fas.fa-shopping-cart(style='padding-right:15px;')
              | Record Sales
          li
            a#showCreditFormBtn(href='/agentdashboard')
              i.fas.fa-credit-card(style='padding-right:15px;')
              | Credit Sales
    main
      .container.d-flex.justify-content-center.align-items-center.min-vh-100
        .row.justify-content-center
          .col-md-6
            .add-book-form.p-4
              h2.text-center.mb-4 Add Sale
              form#add-book-form(action=`/agentdashboard/${procurement._id}` method='POST' name='agentdashboard')
                .mb-3
                  label.form-label(for='produceName') Produce Name
                  select#nproduce.form-control(name='produceName')
                    option(value=procurement._id) #{procurement.produceName}
                  small#pnameErr
                .mb-3
                  label.form-label(for='saleTonnage') Tonnage (Kgs)
                  input#tonnage.form-control(type='number' name='saleTonnage')
                  small#tonnageErr
                .mb-3
                  label.form-label(for='amount') Amount Paid (UGX)
                  input#amount.form-control(type='number' name='amount')
                  small#amountErr
                .mb-3
                  label.form-label(for='buyername') Buyer's Name
                  input#buyername.form-control(type='text' name='buyername')
                  small#buyernameErr
                .mb-3
                  label.form-label(for='salesAgent') Sales Agent
                  select#salesAgent.form-control(name='salesAgent')
                    if agents.length
                      each agent in agents
                        option(value=agent._id) #{agent.firstName + " " + agent.lastName}
                  small#salesAgentErr
                .mb-3
                  label.form-label(for='saledate') Date of Sale
                  input#dateofpurchase.form-control(type='date' name='saledate')
                  small#dateofpurchaseErr
                .text-center
                  button.btn.btn-primary(type='submit') Make Sale
            footer(style='background-color: #2c3e50; color: #fff; padding: 10px; text-align: center;')
              div(style='margin-bottom: 10px;')
                span &copy; 2024 Nakungu Esther. All rights reserved.
            script(src='/js/sales.js')